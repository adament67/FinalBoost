<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_header"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:text="John Rise"
                android:hint="Client Name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="Los Angeles United States"
                android:hint="Service Address" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/serviceStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Start"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/color_white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button_normal"
             />

    </LinearLayout>



</LinearLayout>