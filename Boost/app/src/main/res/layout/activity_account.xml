<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_height="120dp">

                <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:scaleType="centerInside"
                   android:src="@raw/account_pic_icon"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:src="@raw/send_pic_edit_btn"/>

               </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="10dp"
                android:background="#000000"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpss"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_marginBottom="15dp"
                app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/fxc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:text="John Rise"
                    android:hint="Name" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/hh"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:paddingBottom="20dp"
                    android:text="561-358-9578"
                    android:hint="Mobile Number" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/editInfoButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Edit Payment Info"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textColor="@color/color_white"
                android:background="@drawable/bg_button_normal" />

            <include layout="@layout/layout_footer_tab"/>

        </LinearLayout>



    </ScrollView>

</LinearLayout>
