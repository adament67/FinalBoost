<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:paddingLeft="15dp"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:text="John Rise"
                android:hint="Client Name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_addr"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="Los Angeles United States"
                android:hint="Service Address" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_ads"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/inpu_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="Moving furniture"
                android:hint="Work" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="3:15 pm"
                android:hint="Service Started" />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_ut_address"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/inputss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="date"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="3:50 pm"
                android:hint="Service Ended" />

        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputess"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/iness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="35 mins"
                android:hint="Duration" />

        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:id="@+id/inpss"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            app:hintTextAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingBottom="20dp"
                android:text="$ 25"
                android:hint="Card to be changed" />

        </android.support.design.widget.TextInputLayout>


        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_gray"
            android:text="service code"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_gray">

                <ImageView android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:paddingLeft="10dp"
                    android:src="@raw/sign_icon"
                    android:scaleType="centerInside"
                    android:gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Signature"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            </LinearLayout>



        <Button
            android:id="@+id/serviceStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Start"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/color_white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button_normal"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
